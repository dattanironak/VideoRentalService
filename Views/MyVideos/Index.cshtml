@model IEnumerable<VRSystem.Models.Videos>

@if (Model.Count() > 0)
{
    <div class="row ">
        @foreach (var Video in Model)
        {

            <div class="card mx-2 shadow p-3 mb-5 bg-white rounded" style="width: 18rem;">
                <img class="card-img-top" src="@Video.ImagePath" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@Video.Title</h5>
                    <p class="card-text">@Video.Desc</p>
                    <a href="/myvideos/play/@Video.ID" class="btn btn-primary">Play</a>
                </div>

            </div>

        }
    </div>
}